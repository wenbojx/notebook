
-- Table: book
CREATE TABLE book ( 
    id           INTEGER          PRIMARY KEY AUTOINCREMENT,
    bookid       INT( 10 )        DEFAULT ( 0 ),
    title        VARCHAR( 50 ),
    shorttitle   VARCHAR( 50 ),
    intro        VARCHAR( 1000 ),
    type         INT( 2 ),
    tags         VARCHAR( 200 ),
    countVolume  INT( 3 )         DEFAULT ( 0 ),
    countChapter INT( 5 )         DEFAULT ( 0 ),
    countWord    INT( 10 )        DEFAULT ( 0 ),
    creatTime    INT( 10 ),
    updateTime   INT( 10 ),
    status       INT( 1 )         DEFAULT ( 1 ) 
);

