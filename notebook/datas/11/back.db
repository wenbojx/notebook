-- Table: chapter
CREATE TABLE chapter ( 
    id         INTEGER          PRIMARY KEY AUTOINCREMENT,
    bid        INT( 5 ),
    bookid     INT( 10 ),
    fid        INT( 7 )         DEFAULT ( 1 ),
    title      VARCHAR( 50 ),
    intro      VARCHAR( 1000 ),
    createtime INT( 10 ),
    updatetime INT( 10 ),
    status     INT( 1 )         DEFAULT ( 1 ) 
);


-- Index: idx_chapter
CREATE INDEX idx_chapter ON chapter ( 
    bid 
);

